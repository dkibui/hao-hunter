<div class="search-filter-wrapper">
  <div class="hero-area">
    <div class="hero-arrow-navigator-wrapper">
      <div class="left hero-arrow-navigator">
        <%= render "/partials/navigation-icon" %>
      </div>

      <div class="right hero-arrow-navigator">
        <%= render "/partials/navigation-icon" %>
      </div>
    </div>

    <div class="image-wrapper">
      <%= image_tag("hero/beautiful-home.webp", srcset: {
        "hero/beautiful-home.webp" => "1x",
        "hero/beautiful-home@x2.webp" => "2x",
        "hero/beautiful-home@x3.webp" => "3x"
      }, class: "hero-image") %>
    </div>
    <% @hero_images.each do |hero_image| %>
      <% if hero_image.image %>
        <img src="<%= hero_image.image_url(:large) %>" alt="Hero Image">
      <% end %>
    <% end %>

    <div class="hero-message">
      <h1>The <span>#1</span> place to find your next home</h1>
    </div>

  </div>
  <div class="search-filter">
    <%= form_with do |form| %>
      <select class="p-2 rounded-lg border">
        <option>Category</option>
        <option>Apartment</option>
        <option>House</option>
      </select>

      <input type="number" min="1" max="10000000" placeholder="Enter min price">
      <input type="number" min="1" max="10000000" placeholder="Enter max price">

      <select class="p-2 rounded-lg border">
        <option>Status</option>
        <option>For Rent</option>
        <option>For Sale</option>
      </select>

      <%= form.submit "Search" %>
    <% end %>
  </div>
</div>
